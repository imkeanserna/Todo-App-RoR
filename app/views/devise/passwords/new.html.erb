<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Header -->
    <div class="text-center mb-8">
      <h2 class="mt-6 text-3xl font-bold text-gray-900">Forgot your password?</h2>
      <p class="mt-2 text-sm text-gray-600">Enter your email address and weâ€™ll send you instructions to reset your password.</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white p-6 shadow-xl rounded border border-gray-200">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, local: true, class: "space-y-6") do |f| %>
        <% if resource.errors.any? %>
          <div class="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
            <ul class="list-disc pl-5 text-sm space-y-1">
              <% resource.errors.full_messages.each do |message| %>
                <p class="font-semibold text-sm"><%= message %></p>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Email Field -->
        <div class="mb-6">
          <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "block w-full p-4 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
              placeholder: "Enter your email address" %>
        </div>

        <!-- Submit Button -->
        <div class="mb-3">
          <%= f.submit "Send me reset password instructions", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-semibold rounded-lg text-white bg-blue-500 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-[1.02] shadow-lg hover:shadow-xl" %>
        </div>

        <!-- Back to Sign In -->
        <div class="text-center">
          <%= link_to "Back to sign in", new_session_path(resource_name), class: "text-sm font-semibold text-blue-600 hover:text-blue-500 transition-colors duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
