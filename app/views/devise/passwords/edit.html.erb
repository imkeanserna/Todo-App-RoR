<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Header -->
    <div class="text-center mb-8">
      <h2 class="mt-6 text-3xl font-bold text-gray-900">Change your password</h2>
      <p class="mt-2 text-sm text-gray-600">Enter your new password below.</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white p-6 shadow-xl rounded border border-gray-200">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, local: true, class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <!-- New Password -->
        <div class="mb-6">
          <%= f.label :password, "New password", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-500 mb-1 block">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password,
              autofocus: true,
              autocomplete: "new-password",
              class: "block w-full p-4 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
              placeholder: "Enter new password" %>
        </div>

        <!-- Confirm New Password -->
        <div class="mb-6">
          <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "block w-full p-4 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
              placeholder: "Confirm new password" %>
        </div>

        <!-- Submit Button -->
        <div class="mb-3">
          <%= f.submit "Change my password", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-semibold rounded-lg text-white bg-blue-500 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-[1.02] shadow-lg hover:shadow-xl" %>
        </div>

        <!-- Back to Sign In -->
        <div class="text-center">
          <%= link_to "Back to sign in", new_session_path(resource_name), class: "text-sm font-semibold text-blue-600 hover:text-blue-500 transition-colors duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
